generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  name          String?        @db.VarChar(255)
  password      String?        @db.VarChar(255)
  user_type     UserType?      @map("type")
  avatar        String?        @db.VarChar(255)
  email         String         @db.VarChar(255)
  disabled      Boolean        @default(false)
  refreshTokens RefreshToken[]
  orders        Order[]

  @@map("users")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]

  @@map("categories")
}

model Product {
  id          Int                      @id @default(autoincrement())
  code        String                   @unique
  name        String
  images      String[]
  unit        String
  categoryId  Int?
  inventories Inventory[]
  category    Category?                @relation(fields: [categoryId], references: [id])
  details     StockTransactionDetail[]
  variants    ProductVariant[]

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  deletedAt       DateTime?
  orderToProducts OrderToProduct[]

  @@map("products")
}

model Warehouse {
  id           Int                @id @default(autoincrement())
  code         String             @unique
  name         String
  location     String?
  inventories  Inventory[]
  transactions StockTransaction[]

  @@map("warehouses")
}

model StockTransaction {
  id              Int                      @id @default(autoincrement())
  code            String                   @unique
  warehouseId     Int
  transactionType TransactionType
  transactionDate DateTime
  note            String?
  createdAt       DateTime                 @default(now())
  details         StockTransactionDetail[]
  warehouse       Warehouse                @relation(fields: [warehouseId], references: [id])

  @@map("stock_transactions")
}

model StockTransactionDetail {
  id            Int              @id @default(autoincrement())
  transactionId Int
  productId     Int
  quantity      Decimal
  unitPrice     Decimal?
  product       Product          @relation(fields: [productId], references: [id])
  transaction   StockTransaction @relation(fields: [transactionId], references: [id])

  @@map("stock_transaction_details")
}

model Inventory {
  id          Int       @id @default(autoincrement())
  warehouseId Int
  productId   Int
  quantity    Decimal   @default(0)
  lastUpdated DateTime  @default(now())
  product     Product   @relation(fields: [productId], references: [id])
  warehouse   Warehouse @relation(fields: [warehouseId], references: [id])

  @@unique([warehouseId, productId])
  @@map("inventories")
}

model RefreshToken {
  id        String   @id @default(uuid()) @db.Uuid
  token     String   @unique
  userId    String   @db.Uuid
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

enum UserType {
  admin
  client
  collaborator
  coffeeSeller
  coffeeAdmin
}

enum TransactionType {
  IMPORT
  EXPORT
}

model Card {
  id              Int     @id @default(autoincrement())
  title           String
  description     String?
  content         String?
  page            String
  numericalOrder  Int     @default(0)
  icon            String?
  image           String?
  backgroundColor String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cards")
}

model MetaData {
  id              Int     @id @default(autoincrement())
  title           String
  description     String?
  backgroundImage String
  page            String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("meta_data")
}

model Order {
  id              Int              @id @default(autoincrement())
  userId          String           @db.Uuid
  user            User             @relation(fields: [userId], references: [id])
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  deletedAt       DateTime?
  totalPrice      Decimal
  orderToProducts OrderToProduct[]
  tax             Decimal
  voucherCode     String?
  orderVouchers   OrderVoucher[]

  @@map("orders")
}

model OrderToProduct {
  id               String         @id @default(uuid()) @db.Uuid
  orderId          Int            @db.Integer
  productVariantId Int            @db.Integer
  quantity         Int
  price            Decimal
  order            Order          @relation(fields: [orderId], references: [id])
  productVariant   ProductVariant @relation(fields: [productVariantId], references: [id])
  product          Product?       @relation(fields: [productId], references: [id])
  productId        Int?

  @@map("order_to_products")
}

model Voucher {
  id          Int     @id @default(autoincrement())
  code        String  @unique
  amount      Decimal
  description String?

  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  orders    OrderVoucher[]

  @@map("vouchers")
}

model OrderVoucher {
  id        Int @id @default(autoincrement())
  orderId   Int
  voucherId Int

  order   Order   @relation(fields: [orderId], references: [id])
  voucher Voucher @relation(fields: [voucherId], references: [id])

  @@unique([orderId, voucherId])
  @@map("order_vouchers")
}

model ProductVariant {
  id        Int       @id @default(autoincrement())
  productId Int
  label     String    @default("size")
  value     String
  price     Decimal
  deletedAt DateTime?

  product         Product          @relation(fields: [productId], references: [id])
  orderToProducts OrderToProduct[]

  @@map("product_variants")
}
